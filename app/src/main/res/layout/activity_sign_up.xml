<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".SignUpAct">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BA9309"

        android:orientation="vertical">

    <TextView
        android:id="@+id/caseMate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sigmar_one"
        android:gravity="center"
        android:text="CASE MATE"
        android:textColor="#4c3d3d"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/caseMateDescript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sigmar_one"
        android:gravity="center"
        android:text="AN ANDROID CRIME REPORTING APPLICATION"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/roundcorner"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="50dp">


        <TextView
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRATION"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textSize="35dp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="User Name"
            app:endIconMode="clear_text"
            app:helperTextTextColor="#4CAF50"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:counterTextColor="@color/design_default_color_secondary_variant"
            android:textColorHint="@color/black"
            app:boxStrokeColor="#4CAF50"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:fontFamily="@font/nunito"
                android:background="@color/white"
                android:layout_gravity="center"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Email"
            app:placeholderText=" ex:abc123@gmail.com"
            app:placeholderTextColor="#656363"
            app:helperTextTextColor="#4CAF50"
            app:endIconMode="clear_text"
            android:layout_marginTop="20dp"
            app:counterEnabled="true"
            app:counterMaxLength="35"
            app:counterTextColor="@color/design_default_color_secondary_variant"
            android:textColorHint="@color/black"
            app:boxStrokeColor="#4CAF50">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:fontFamily="@font/nunito"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:maxLength="35"
                android:singleLine="true"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

